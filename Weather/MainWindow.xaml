<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Weather.MainWindow"
        mc:Ignorable="d"
        Title="Выбор" Height="450" Width="800" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Button Content="Выбрать" HorizontalAlignment="Center" Margin="0,242,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ComboBox x:Name="Cities" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <System:String>Тверь</System:String>
            <System:String>Иваново</System:String>
            <System:String>Москва</System:String>
            <System:String>Владимир</System:String>
            <System:String>Санкт - Петербург</System:String>
            <System:String>Псков</System:String>
            <System:String>Смоленск</System:String>
            <System:String>Екатеринбург</System:String>
            <System:String>Сочи</System:String>
        </ComboBox>

    </Grid>
</Window>
