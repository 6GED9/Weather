<Window x:Name="win" x:Class="Weather.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="Погода" Height="450" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Resourses/Sky/CloudBackGround.png"/>
    </Window.Background>

    <Canvas>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="weatherLabel1" Content="Загрузка" HorizontalAlignment="Left" Height="40" Canvas.Left="203" Canvas.Top="114" Width="90" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="weatherLabel" Content="Погода" HorizontalAlignment="Left" Height="40" Canvas.Left="203" Canvas.Top="159" VerticalAlignment="Top" />
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="temperature" Content="Температура&#xD;&#xA;" HorizontalAlignment="Left" Height="40" Canvas.Left="203" Canvas.Top="204" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="humidity" Content="Влажность" HorizontalAlignment="Left" Height="40" Canvas.Left="508" Canvas.Top="155" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="pressure" Content="Давление" HorizontalAlignment="Left" Height="40" Canvas.Left="508" Canvas.Top="204" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="speed" Content="Скорость&#xD;&#xA;" HorizontalAlignment="Center" Height="40" Canvas.Left="37" Canvas.Top="312" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="vector" Content="Направление" HorizontalAlignment="Center" Height="40" Canvas.Left="37" Canvas.Top="357" VerticalAlignment="Top"/>
        <Label Style="{DynamicResource CityNameLabelStyle}" x:Name ="CityLabel" Content="Город&#xD;&#xA;" HorizontalAlignment="Center" Height="70" FontSize="36" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="212" Canvas.Top="22" Width="376"/>
        <Label Style="{DynamicResource ParametersLabelStyle}" FontSize="18" x:Name ="wind" Content="Ветер" HorizontalAlignment="Left" Height="40" Canvas.Left="37" Canvas.Top="267" Width="120" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel x:Name="WeatherImage" Width="150" Height="150" Canvas.Left="37" Canvas.Top="106">
            <StackPanel.Background>
                <ImageBrush/>
            </StackPanel.Background>
        </StackPanel>
    </Canvas>
</Window>
